

<h1><%= @author.name %> (b. <%= @author.birthyear %>)</h1><br>

<p>Books:</p>
<ul>
  <% @author.books.each do |book| %>
  <li>
    <%= link_to book.title, book_path(book) %>
  </li>
  <% end %>

</ul>


  <%= button_to 'Edit', edit_author_path(@author), method: :get %>

  <%= button_to 'Delete', author_path(@author), method: :delete %>
